<view style="text-align: center;padding: 68rpx 0;">
    <view class="pay-time">支付剩余时间
        <van-count-down
                style="margin-left: 20rpx"
                time="{{order.countdown}}"
                format="mm:ss"
        />
    </view>
    <view class="pay-money"><text>￥</text>{{order.payAmount}}</view>
    <view class="bussiness-info">{{order.businessAddress}}-{{order.businessMobile}}</view>
</view>
<view class="pay-type">
    <van-radio-group value="{{ radio }}" bind:change="onChange">
        <van-cell-group >
            <van-cell
                    custom-class="cell-class"
                    title-class="cell-title-class"
                    title="微信支付"
                    clickable
                    data-name="1"
                    bind:click="onClick"
            >

                <image slot="icon" src="/static/image/icon/wechat.png" style="width: 40rpx;height: 40rpx;"/>
                <van-radio  slot="right-icon" name="1" checked-color="var(--primary)">
                </van-radio>
            </van-cell>
        </van-cell-group>
    </van-radio-group>
</view>
<view class="submit-btn-container">
    <van-button
            custom-class="submit-btn"
            bindtap="submit"
            type="primary"
            block
            round>
        确认支付
    </van-button>
</view>
