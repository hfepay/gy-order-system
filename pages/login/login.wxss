/* pages/login/login.wxss */
view{
  --text-color:black;
}
.login-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  padding: 86rpx 94rpx;
  box-sizing: content-box;
}
.login-container .row{
  display: inline-block
}
.logo-airport image{
  width: 275rpx;
  height: 229rpx;
}
.logo{
  margin: 30rpx auto;
}
.logo image{
  width: 563rpx;
  height: 393rpx;
}
.name{
  font-size:54rpx;
  line-height:101rpx;
  /* margin-bottom: 43rpx; */
  color:var(--text-color);
}
.login-btn{
  color: white;
  border-radius: 42rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-weight: bold;
}
.airport-name{
  font-size:45rpx;
  color:var(--text-color);
  line-height:91rpx;
  font-weight:bold;
}

.intro{
  color: #E60012;
  font-style: italic;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 80rpx
}
.desc{
  font-size: 24rpx;
  color: #999999;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}
