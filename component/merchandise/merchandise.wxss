.commodity-item{
    display: flex;
    height: 196rpx;
    align-items: center;
    padding: 0 36rpx;
}
.commodity-item .commodity-img{
    height: 138rpx;
    width: 138rpx;
}
.commodity-item .commodity-img image{
    width: 100%;
    height: 100%;
}
.commodity-info{
    margin-left: 23rpx;
    flex:1;
    height: 138rpx;
}
.commodity-info .commodity-info__name{}
.commodity-info .commodity-info__price__num{
    font-size:30rpx;
    color: #E12E41;
    display: flex;
    margin-top: 36rpx;
}
.commodity-info .commodity-info__price__num .commodity-info__price{
    line-height: 56rpx;
}
.commodity-info .commodity-info__price__num .commodity-info__num{
    flex: 1;
    text-align: right;
}

.stepper-input{
    border-radius: 50%!important;
    background-color:transparent!important;
    color: var(--black)!important;
}
.stepper-icon{
    border-radius: 50%!important;
}
.stepper-icon__plus{
    background-color: #E12E41!important;
    color:white!important;
}
.stepper-icon__minus{
    background-color:white!important;
    border:1px solid #c8c9cc!important;
}
